[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    env,
    logs,
    data,
    docs,
    postgres-init,
    deploy,
    scripts,
    migrations,
    .streamlit
ignore = E203,W503,E501,F401,F811,E402
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,E402
    */conftest.py:F401,F811
